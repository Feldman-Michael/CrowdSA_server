# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                               controllers.Application.index

# Login
POST        /login                          controllers.Application.login
POST        /logout                         controllers.Application.logout

# Hits
POST        /hit                            controllers.Application.hit

# Questions
GET         /questions                      controllers.Application.questions
GET         /getQuestion/:id                controllers.Application.getQuestion(id: Int)
POST        /question                       controllers.Application.question

# Waiting
GET         /waiting                        controllers.Application.waiting

# PDF Viewer
GET         /viewer/:title                  controllers.Application.viewer(title: String, csv = "")
GET         /viewer/:title/:csv             controllers.Application.viewer(title: String, csv: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

    