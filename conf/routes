# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          controllers.Application.index

# Login
POST        /login                     controllers.Login.login()
GET         /logout                    controllers.Login.logout()

# Paper
POST        /paper                     controllers.Application.storePaper

# Questions
GET         /questions                 controllers.Waiting.questions
#GET         /question/:id                controllers.Application.getQuestion(id: Int)
#POST        /question                       controllers.Application.question

# Answers
#GET         /question/:id/answers       controllers.Application.getAllAnswersForQuestion(id: Int)
#GET         /question/answer/:id         controllers.Application.getAnswerForQuestion(id: Int)
#GET         /question/:id/answer/:type         controllers.Application.getAllAnswerForQuestionTypeInQuestionId(id: Int, type: String)

# Waiting
GET         /waiting                   controllers.Waiting.waiting
GET         /jobs                      controllers.Waiting.jobs

# Waiting - Search functionality
GET         /search/:term              controllers.Search.perform(term:String)
GET         /search/                   controllers.Search.perform(term:String="")

# Account
GET         /account                   controllers.Application.account

# Statistics
GET         /statistics                controllers.Application.statistics

# PDF Viewer
GET         /viewer/:questionId        controllers.Application.viewer(questionId: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.at(path="/public", file)
